<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF0000"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/kfa_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KFA"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/game_recyclerView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/depth"
            android:background="#FFFFFF"
            android:id="@+id/depthBtn"/>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/community"
            android:id="@+id/communityBtn"/>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@drawable/news"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:id="@+id/newsBtn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:gravity="center">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/facebook"
                android:id="@+id/facebookID"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/instargram"
                android:id="@+id/intargramID"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/twitter"
                android:id="@+id/twitterID"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/youtube"
                android:id="@+id/youtubeID"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>